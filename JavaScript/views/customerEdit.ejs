<%- include('partials/header.ejs') %>
<body>
  <h2>Edit Existing Customer</h2>
  
  <div class="sidenav">
    Navigation
    <br><br>
  <nav>
    <a href="/technician/new" >Add a New Technician</a> <br>
    <a href="/technician/lookup" >Find and Update Technicians</a> <br>
    <a href="/customer/lookup" >Find, Update and Add Customers</a> <br>
  
  <br> </br>
    <a href="/technician/home">Technician Home</a>
    <br>
    <a href="/" >Logout</a>
  </nav>
  </div>
  
  <form method="POST" action="/customer/edit" class="uInputForm">
    
    <input type="hidden" name="customerId" value="<%=customerInfo[0].customerId%>">
    
    <label>First Name:</label>
    <input type="text" name="firstName" value="<%=customerInfo[0].firstName%>">
    
    <label>Last Name:</label> 
    <input type="text" name="lastName" value="<%=customerInfo[0].lastName%>">

    <label>Zip:</label>
    <input type="text" name="zip" value="<%=customerInfo[0].zip%>">
    
    <label>Email:</label>
    <input type="text" name="email" value="<%=customerInfo[0].email%>">
    
    <label>Phone:</label> 
    <input type="text" name="phoneNumber" value="<%=customerInfo[0].phoneNumber%>">
    
    <label>Military Discount:</label><br>
    <label>Yes</label>
    <input type="radio" name="military" value="Y" 
      <% if (customerInfo[0].military == "Y") { %>
        checked 
      <% } %>
    >
    <label>No</label>
        <input type="radio" name="military" value="N"
      <% if (customerInfo[0].military == "N") { %>
        checked 
      <% } %>
    >
    <br>
    <button class="indexButtons">Update</button>
  </form>
  <br>

  <% if (typeof message != "undefined"){ %>
  	<h3><%=message%></h3>
  <% } %>
  <%- include("partials/footer.ejs") %>
</body>
</html>
